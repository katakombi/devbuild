info SETTING UP X11VNC ENVIRONMENT

apt_update

setup_timezone

apt_upgrade

runroot apt install -y --no-install-recommends \
	ca-certificates \
	x11vnc

cat << EOF | run_pipe
#!/bin/bash
export PARAMS="\$\@"
echo "Running x11vnc $PARAMS"
./$PROOTREL -r .tmp sh -c 'x11vnc \$PARAMS'
echo "Finished!"
EOF

box
